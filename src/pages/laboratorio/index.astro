---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';
import { getExamenes, getCategorias } from '../../data/examenes';

const examenes = await getExamenes();
const categorias = await getCategorias();
---

<Layout title="Exámenes de Laboratorio - NeoMed">
  <Header />

  <!-- Hero Search Section -->
  <section class="relative pt-28 pb-16 bg-gradient-to-b from-slate-100 to-slate-50 overflow-hidden">
    <!-- Subtle medical background pattern -->
    <div class="absolute inset-0 opacity-[0.06]">
      <div class="absolute top-20 left-10 w-40 h-40">
        <img src="/neomed_icon.png" alt="" class="w-full h-full object-contain" />
      </div>
      <div class="absolute bottom-10 right-20 w-32 h-32">
        <img src="/neomed_icon.png" alt="" class="w-full h-full object-contain" />
      </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto">
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-8">
          Exámenes de Laboratorio
        </h1>

        <!-- Search Bar -->
        <div class="bg-white rounded-2xl shadow-lg p-5 md:p-6 border border-slate-200/60">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="relative flex-1">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <input 
                id="lab-search" 
                type="text" 
                placeholder="Buscar por nombre de examen" 
                class="w-full pl-12 pr-4 py-3.5 rounded-xl border border-slate-200 bg-white focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent text-slate-700 placeholder-slate-400 transition-all"
              />
            </div>
            <button 
              id="lab-buscar"
              class="inline-flex items-center justify-center gap-2 bg-cyan-600 hover:bg-cyan-700 text-white font-medium px-8 py-3.5 rounded-xl transition-colors shadow-sm hover:shadow-md cursor-pointer"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              Buscar
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Curved bottom edge -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" class="w-full" preserveAspectRatio="none">
        <path d="M0 60L1440 60L1440 0C1440 0 1080 40 720 40C360 40 0 0 0 0L0 60Z" fill="#f8fafc"/>
      </svg>
    </div>
  </section>

  <!-- Categorías más buscadas -->
  <section id="categorias-section" class="py-12 bg-slate-50">
    <div class="container mx-auto px-4">
      <h2 class="font-heading text-xl md:text-2xl font-semibold text-slate-800 text-center mb-10">
        Examenes de laboratorio por categoría
      </h2>
      <div class="flex flex-wrap justify-center gap-6 md:gap-10 max-w-5xl mx-auto">
        {categorias.map(cat => (
          <button class="categoria-btn group flex flex-col items-center gap-3 cursor-pointer" data-filter={cat.name}>
            <div class="w-20 h-20 rounded-2xl bg-white border border-slate-200 shadow-sm flex items-center justify-center group-hover:border-cyan-300 group-hover:shadow-md transition-all categoria-icon">
              <span class="text-4xl group-hover:scale-110 transition-transform">{cat.emoji}</span>
            </div>
            <span class="text-sm text-slate-600 font-medium group-hover:text-cyan-700 transition-colors text-center max-w-[100px] categoria-label">{cat.name}</span>
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Results -->
  <section class="py-12 md:py-16 bg-slate-50 min-h-[40vh]">
    <div class="container mx-auto px-4">

      <!-- Results header -->
      <div id="lab-results-header" class="max-w-5xl mx-auto mb-6 hidden">
        <div class="flex items-center justify-between">
          <p class="text-slate-600 text-sm">
            <span id="lab-count">0</span> examen(es) disponibles
          </p>
          <button id="lab-clear" class="text-cyan-600 hover:text-cyan-700 text-sm font-medium cursor-pointer items-center gap-1 transition-colors hidden flex">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Limpiar filtros
          </button>
        </div>
      </div>

      <!-- Exam Cards -->
      <div id="lab-grid" class="max-w-5xl mx-auto space-y-4">
        {examenes.map((exam) => (
          <div 
            class="lab-card block bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-lg hover:border-cyan-200 transition-all duration-300 group"
            data-name={exam.name.toLowerCase()}
            data-category={exam.category}
            data-price={exam.price}
          >
            <!-- Card Content -->
            <div class="flex flex-col md:flex-row items-start gap-6 p-6 md:p-8">
              <!-- Icon/Category Badge -->
              <div class="flex-shrink-0 w-16 h-16 rounded-2xl bg-cyan-50 border border-cyan-100 flex items-center justify-center">
                <svg class="w-8 h-8 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              </div>

              <!-- Info -->
              <div class="flex-1">
                <h3 class="font-heading text-xl font-semibold text-slate-900 group-hover:text-cyan-700 transition-colors mb-1">{exam.name}</h3>
                <p class="text-cyan-600 font-medium text-sm mb-3">{exam.category}</p>
                {exam.description && (
                  <p class="text-slate-500 text-sm leading-relaxed">
                    {exam.description}
                  </p>
                )}
              </div>

              <!-- Price -->
              <div class="flex-shrink-0 text-right md:self-center">
                <div class="flex items-baseline gap-1 justify-end">
                  <span class="text-3xl font-bold text-cyan-600">₡{exam.price.toLocaleString('es-CR')}</span>
                </div>
                <p class="text-slate-400 text-xs mt-1">Precio de contado</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- No results -->
      <div id="lab-no-results" class="hidden text-center py-16 max-w-5xl mx-auto">
        <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <p class="text-slate-500 text-lg" id="no-results-message">Selecciona una categoría para ver los exámenes disponibles</p>
        <p class="text-slate-400 text-sm mt-1">Usa los botones arriba para filtrar por categoría</p>
      </div>

      <!-- Empty state when no exams exist -->
      {examenes.length === 0 && (
        <div class="text-center py-16 max-w-5xl mx-auto">
          <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
          </svg>
          <p class="text-slate-500 text-lg">Próximamente nuestro catálogo de exámenes</p>
          <p class="text-slate-400 text-sm mt-1">Estamos preparando la información para ti</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-cyan-600 to-cyan-700">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl md:text-4xl font-light text-white mb-4">
        ¿Necesitas realizarte un <span class="font-semibold">examen</span>?
      </h2>
      <p class="text-cyan-100 text-lg mb-8 max-w-xl mx-auto">
        Agenda tu cita y obtén resultados rápidos con la mejor calidad
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/agendar" 
          class="inline-flex items-center gap-2 bg-white text-cyan-700 hover:bg-cyan-50 px-8 py-3.5 rounded-full font-medium transition-all shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Agendar Cita
        </a>
        <a 
          href="https://wa.me/50670494362?text=Hola, me gustaría información sobre exámenes de laboratorio" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-transparent border-2 border-white/30 text-white hover:bg-white/10 px-8 py-3.5 rounded-full font-medium transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Contactar por WhatsApp
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.lab-card');
    const searchInput = document.getElementById('lab-search') as HTMLInputElement;
    const buscarBtn = document.getElementById('lab-buscar') as HTMLButtonElement;
    const categoriaBtns = document.querySelectorAll('.categoria-btn');
    const countEl = document.getElementById('lab-count');
    const noResults = document.getElementById('lab-no-results');
    const grid = document.getElementById('lab-grid');
    const clearBtn = document.getElementById('lab-clear');
    const categoriasSection = document.getElementById('categorias-section');
    const noResultsMessage = document.getElementById('no-results-message');
    const resultsHeader = document.getElementById('lab-results-header');

    // Variable to track active category
    let activeCategory = '';

    function normalize(str: string): string {
      return str.normalize('NFD').replace(/[\u0300-\u036f]/g, '').toLowerCase();
    }

    function doFilter() {
      const search = normalize(searchInput?.value.trim() || '');
      let visible = 0;

      // Only show cards if a category is selected
      if (!activeCategory) {
        cards.forEach(card => {
          (card as HTMLElement).style.display = 'none';
        });
        if (countEl) countEl.textContent = '0';
        grid?.classList.add('hidden');
        noResults?.classList.remove('hidden');
        resultsHeader?.classList.add('hidden');
        if (noResultsMessage) {
          noResultsMessage.textContent = 'Selecciona una categoría para ver los exámenes disponibles';
        }
        clearBtn?.classList.add('hidden');
        return;
      }

      // Show results header when category is selected
      resultsHeader?.classList.remove('hidden');

      cards.forEach(card => {
        const el = card as HTMLElement;
        const name = normalize(el.dataset.name || '');
        const cardCat = el.dataset.category || '';

        const matchesSearch = !search || name.includes(search);
        const matchesCat = cardCat === activeCategory;

        if (matchesSearch && matchesCat) {
          el.style.display = '';
          visible++;
        } else {
          el.style.display = 'none';
        }
      });

      if (countEl) countEl.textContent = String(visible);
      noResults?.classList.toggle('hidden', visible > 0);
      grid?.classList.toggle('hidden', visible === 0);
      
      // Update no results message based on whether there's a search active
      if (visible === 0 && noResultsMessage) {
        if (search) {
          noResultsMessage.textContent = 'No se encontraron exámenes con ese criterio';
        } else {
          noResultsMessage.textContent = 'No hay exámenes en esta categoría';
        }
      }
      
      clearBtn?.classList.toggle('hidden', !search && !activeCategory);
    }

    // Update visual state of category buttons
    function updateCategoryButtons(activeCat: string) {
      activeCategory = activeCat;
      
      categoriaBtns.forEach(btn => {
        const el = btn as HTMLElement;
        const btnCat = el.dataset.filter || '';
        const isActive = btnCat === activeCat;
        
        if (isActive) {
          el.classList.add('active');
          const icon = el.querySelector('.categoria-icon');
          const label = el.querySelector('.categoria-label');
          icon?.classList.add('border-cyan-500', 'bg-cyan-50', 'shadow-md');
          icon?.classList.remove('border-slate-200');
          label?.classList.add('text-cyan-700', 'font-semibold');
          label?.classList.remove('text-slate-600');
        } else {
          el.classList.remove('active');
          const icon = el.querySelector('.categoria-icon');
          const label = el.querySelector('.categoria-label');
          icon?.classList.remove('border-cyan-500', 'bg-cyan-50', 'shadow-md');
          icon?.classList.add('border-slate-200');
          label?.classList.remove('text-cyan-700', 'font-semibold');
          label?.classList.add('text-slate-600');
        }
      });
    }

    // Live search
    searchInput?.addEventListener('input', doFilter);

    // Search button
    buscarBtn?.addEventListener('click', () => {
      doFilter();
      
      // Scroll to results
      const resultsSection = document.getElementById('lab-results-header');
      if (resultsSection) {
        const offset = 100; // Offset from top
        const elementPosition = resultsSection.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - offset;
        
        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });
      }
    });

    // Category buttons
    categoriaBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = (btn as HTMLElement).dataset.filter || '';
        updateCategoryButtons(cat);
        doFilter();
        
        // Scroll to results
        const resultsSection = document.getElementById('lab-results-header');
        if (resultsSection) {
          const offset = 100; // Offset from top
          const elementPosition = resultsSection.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - offset;
          
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      });
    });

    // Clear button
    clearBtn?.addEventListener('click', () => {
      if (searchInput) searchInput.value = '';
      updateCategoryButtons(''); // Deselect all categories
      doFilter();
    });

    // Initialize - hide all cards until category is selected
    doFilter();
  });
</script>
