const team = [
  { name: 'Dra. María González', role: 'Directora Médica', specialty: 'Medicina Interna', image: 'https://randomuser.me/api/portraits/women/65.jpg' },
  { name: 'Lic. Carlos Mendoza', role: 'Enfermero Jefe', specialty: 'Cuidados Intensivos', image: 'https://randomuser.me/api/portraits/men/43.jpg' },
  { name: 'Lic. Ana Rodríguez', role: 'Nutrióloga', specialty: 'Nutrición Clínica', image: 'https://randomuser.me/api/portraits/women/68.jpg' },
  { name: 'Lic. Roberto Sánchez', role: 'Fisioterapeuta', specialty: 'Rehabilitación Deportiva', image: 'https://randomuser.me/api/portraits/men/44.jpg' },
  { name: 'Dra. Laura Martínez', role: 'Psicóloga', specialty: 'Terapia Cognitivo-Conductual', image: 'https://randomuser.me/api/portraits/women/66.jpg' },
  { name: 'Lic. Patricia López', role: 'Enfermera', specialty: 'Atención Pediátrica', image: 'https://randomuser.me/api/portraits/women/67.jpg' },
];

const testimonials = [
  {
    name: 'Andrea Jiménez',
    rating: 5,
    text: 'La atención fue excelente, el equipo médico muy profesional y humano. Recomiendo NeoMed a todos mis amigos y familiares.'
  },
  {
    name: 'Luis Fernández',
    rating: 5,
    text: 'Me sentí acompañado en todo momento, resolvieron todas mis dudas y el tratamiento fue muy efectivo.'
  },
  {
    name: 'María Solís',
    rating: 4,
    text: 'Muy buenas instalaciones y personal amable. Volvería sin dudarlo.'
  }
];

const faqs = [
  {
    question: '¿Cómo puedo agendar una cita?',
    answer: 'Puedes agendar tu cita llamando a nuestro número telefónico +506 1234 5678, enviando un correo a info@neomed.cr, o directamente desde nuestra página web en la sección "Agendar Cita".'
  },
  {
    question: '¿Qué especialidades médicas ofrecen?',
    answer: 'Contamos con 5 especialidades principales: Medicina General, Enfermería, Nutrición, Terapia Física y Psicología. Cada una con profesionales certificados y amplia experiencia.'
  },
  {
    question: '¿Cuál es el horario de atención?',
    answer: 'Atendemos de lunes a viernes de 7:00am a 7:00pm y los sábados de 8:00am a 2:00pm. Los domingos permanecemos cerrados.'
  },
  {
    question: '¿Aceptan seguros médicos?',
    answer: 'Sí, trabajamos con las principales aseguradoras del país. Te recomendamos contactarnos para verificar si tu seguro específico está incluido.'
  },
  {
    question: '¿Dónde están ubicados?',
    answer: 'Estamos ubicados en San José, Costa Rica, en una zona de fácil acceso con estacionamiento disponible para nuestros pacientes.'
  }
];
---

<Layout title="Inicio">
  <Header />
  
  <!-- Hero Section - Diseño elegante y profesional -->
  <section class="relative bg-gradient-to-br from-teal-50 via-white to-slate-50 py-20 md:py-32 overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-teal-100 rounded-full filter blur-3xl opacity-20"></div>
      <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-cyan-100 rounded-full filter blur-3xl opacity-20"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="space-y-8">
          <div class="flex items-center gap-3">
            <div class="w-12 h-[2px] bg-teal-700"></div>
            <div class="flex items-center gap-2 text-teal-700">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-1 11h-4v4h-4v-4H6v-4h4V6h4v4h4v4z"/>
              </svg>
              <span class="text-sm font-semibold uppercase tracking-widest">Clínica Médica Integral</span>
            </div>
          </div>
          
          <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 leading-tight">
            Tu mejor opción en <span class="text-teal-700">salud integral</span>
          </h1>
          
          <p class="text-xl text-gray-600 leading-relaxed max-w-xl">
            Profesionales dedicados a tu bienestar con más de 10 años de experiencia brindando atención médica de calidad.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="/agendar" 
              class="inline-flex items-center justify-center gap-2 bg-teal-700 hover:bg-teal-800 text-white px-8 py-4 rounded-md font-semibold transition-all shadow-lg hover:shadow-xl text-lg"
            >
              Agendar Cita
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
            <a 
              href="#servicios" 
              class="inline-flex items-center justify-center gap-2 bg-white hover:bg-gray-50 text-teal-800 px-8 py-4 rounded-md font-semibold transition-all border-2 border-teal-700 text-lg"
            >
              Ver Especialidades
            </a>
          </div>
        </div>
        
        <!-- Image -->
        <div class="relative">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src="https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?auto=format&fit=crop&w=1000&q=80" 
              alt="NeoMed Clínica" 
              class="w-full h-auto"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-teal-900/50 to-transparent"></div>
          </div>
          
          <!-- Floating card -->
          <!-- <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-xl shadow-xl border-l-4 border-teal-700">
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-teal-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <div class="text-3xl font-bold text-gray-900">15K+</div>
                <div class="text-sm text-gray-600">Pacientes Atendidos</div>
              </div>
            </div>
          </div> -->
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-teal-800 text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">10+</div>
          <div class="text-teal-200 uppercase tracking-wider text-sm">Años de experiencia</div>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">15K+</div>
          <div class="text-teal-200 uppercase tracking-wider text-sm">Pacientes atendidos</div>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">5</div>
          <div class="text-teal-200 uppercase tracking-wider text-sm">Especialidades</div>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">98%</div>
          <div class="text-teal-200 uppercase tracking-wider text-sm">Satisfacción</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="servicios" class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="flex items-center justify-center gap-3 mb-6">
          <div class="w-12 h-[2px] bg-teal-700"></div>
          <div class="flex items-center gap-2 text-teal-700">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-1 11h-4v4h-4v-4H6v-4h4V6h4v4h4v4z"/>
            </svg>
            <span class="text-sm font-semibold uppercase tracking-widest">Especialidades</span>
          </div>
          <div class="w-12 h-[2px] bg-teal-700"></div>
        </div>
        <h2 class="font-display text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Servicios <span class="text-teal-700">Médicos</span>
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          Contamos con un equipo multidisciplinario de profesionales especializados para cuidar tu salud integral
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {services.map((service) => (
          <a 
            href={service.href}
            class="group relative h-80 rounded-2xl overflow-hidden shadow-xl"
          >
            <!-- Imagen de fondo -->
            <img 
              src={service.image} 
              alt={service.title}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            
            <!-- Overlay gradiente -->
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-500"></div>
            
            <!-- Contenido -->
            <div class="absolute inset-0 p-8 flex flex-col justify-end">
              <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                <div class="w-12 h-12 rounded-full bg-teal-500/30 backdrop-blur-sm flex items-center justify-center mb-4 border border-teal-400/50">
                  <div set:html={service.icon} class="text-white" />
                </div>
                
                <h3 class="font-display text-2xl font-bold text-white mb-2">
                  {service.title}
                </h3>
                
                <p class="text-white/80 text-sm leading-relaxed mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                  {service.description}
                </p>
                
                <div class="flex items-center gap-2 text-teal-300 font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-150">
                  <span class="text-sm uppercase tracking-wider">Conocer más</span>
                  <svg class="w-5 h-5 group-hover:translate-x-2 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              </div>
            </div>
            
            <!-- Borde decorativo -->
            <div class="absolute inset-0 border-2 border-transparent group-hover:border-teal-400/50 rounded-2xl transition-colors duration-500"></div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="nosotros" class="py-24 bg-gray-900 text-white overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16">
          <div class="flex items-center justify-center gap-3 mb-6">
            <div class="w-12 h-[2px] bg-teal-400"></div>
            <span class="text-teal-400 text-sm font-semibold uppercase tracking-widest">Nuestra Historia</span>
            <div class="w-12 h-[2px] bg-teal-400"></div>
          </div>
          <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
            Más que una <span class="text-teal-400">clínica</span>
          </h2>
        </div>
        
        <!-- Main Content Grid -->
        <div class="grid lg:grid-cols-12 gap-8 items-center">
          <!-- Left - Big Number & Text -->
          <div class="lg:col-span-5 space-y-8">
            <div class="relative">
              <div class="text-[150px] md:text-[200px] font-bold text-teal-900/50 leading-none select-none">
                10+
              </div>
              <div class="absolute bottom-4 left-0">
                <p class="text-3xl md:text-4xl font-display font-bold text-white">Años cuidando</p>
                <p class="text-3xl md:text-4xl font-display font-bold text-teal-400">tu salud</p>
              </div>
            </div>
            
            <p class="text-lg text-gray-300 leading-relaxed">
              En NeoMed creemos que la salud es integral. Por eso ofrecemos un enfoque multidisciplinario que cuida tanto tu cuerpo como tu mente.
            </p>
            
            <a 
              href="/agendar" 
              class="inline-flex items-center gap-2 bg-teal-500 hover:bg-teal-400 text-gray-900 px-8 py-4 rounded-md font-semibold transition-all"
            >
              Conoce más
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
          
          <!-- Right - Features Grid -->
          <div class="lg:col-span-7 grid sm:grid-cols-2 gap-6">
            <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700 hover:border-teal-500/50 transition-colors group">
              <div class="w-14 h-14 rounded-xl bg-teal-500/20 flex items-center justify-center mb-6 group-hover:bg-teal-500/30 transition-colors">
                <svg class="w-7 h-7 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              </div>
              <h4 class="font-display text-xl font-bold text-white mb-3">Atención de Calidad</h4>
              <p class="text-gray-400 text-sm leading-relaxed">Profesionales certificados con los más altos estándares médicos</p>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700 hover:border-teal-500/50 transition-colors group">
              <div class="w-14 h-14 rounded-xl bg-teal-500/20 flex items-center justify-center mb-6 group-hover:bg-teal-500/30 transition-colors">
                <svg class="w-7 h-7 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              </div>
              <h4 class="font-display text-xl font-bold text-white mb-3">Equipo Humano</h4>
              <p class="text-gray-400 text-sm leading-relaxed">Personal dedicado que te trata como familia</p>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700 hover:border-teal-500/50 transition-colors group">
              <div class="w-14 h-14 rounded-xl bg-teal-500/20 flex items-center justify-center mb-6 group-hover:bg-teal-500/30 transition-colors">
                <svg class="w-7 h-7 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                </svg>
              </div>
              <h4 class="font-display text-xl font-bold text-white mb-3">Tecnología Moderna</h4>
              <p class="text-gray-400 text-sm leading-relaxed">Equipos de última generación para diagnósticos precisos</p>
            </div>
            
            <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700 hover:border-teal-500/50 transition-colors group">
              <div class="w-14 h-14 rounded-xl bg-teal-500/20 flex items-center justify-center mb-6 group-hover:bg-teal-500/30 transition-colors">
                <svg class="w-7 h-7 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="font-display text-xl font-bold text-white mb-3">Horarios Flexibles</h4>
              <p class="text-gray-400 text-sm leading-relaxed">Atención ampliada para adaptarnos a tu agenda</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-block px-4 py-2 bg-teal-100 text-teal-800 rounded-full text-sm font-semibold uppercase tracking-wider mb-4">
          Nuestro Equipo
        </div>
        <h2 class="font-display text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Profesionales de <span class="text-teal-700">Excelencia</span>
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          Conoce a los especialistas que harán de tu experiencia en NeoMed algo excepcional
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {team.map((member) => (
          <div class="bg-gray-50 rounded-xl p-8 text-center hover:shadow-2xl transition-all duration-300 border border-gray-200 hover:border-teal-700 group">
            <div class="w-24 h-24 bg-gradient-to-br from-teal-100 to-teal-200 rounded-full mx-auto mb-6 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-12 h-12 text-teal-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="font-display text-xl font-bold text-gray-900 mb-2">{member.name}</h3>
            <p class="text-teal-700 text-sm font-semibold mb-2 uppercase tracking-wider">{member.role}</p>
            <p class="text-gray-600 text-sm">{member.specialty}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contacto" class="py-24 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
