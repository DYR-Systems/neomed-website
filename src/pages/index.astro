---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const services = [
  {
    title: 'Medicina',
    description: 'Atención médica integral para toda la familia.',
    href: '/servicios/medicina',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
    </svg>`
  },
  {
    title: 'Enfermería',
    description: 'Cuidados profesionales y personalizados para tu bienestar diario.',
    href: '/servicios/enfermeria',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
    </svg>`
  },
  {
    title: 'Nutrición',
    description: 'Planes alimenticios diseñados especialmente para ti.',
    href: '/servicios/nutricion',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
    </svg>`
  },
  {
    title: 'Terapia Física',
    description: 'Recupera tu movilidad con tratamientos especializados.',
    href: '/servicios/terapia-fisica',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
    </svg>`
  },
  {
    title: 'Psicología',
    description: 'Apoyo profesional para tu salud mental y emocional.',
    href: '/servicios/psicologia',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`
  }
];

const team = [
  { name: 'Dra. María González', role: 'Directora Médica', specialty: 'Medicina Interna' },
  { name: 'Lic. Carlos Mendoza', role: 'Enfermero Jefe', specialty: 'Cuidados Intensivos' },
  { name: 'Lic. Ana Rodríguez', role: 'Nutrióloga', specialty: 'Nutrición Clínica' },
  { name: 'Lic. Roberto Sánchez', role: 'Fisioterapeuta', specialty: 'Rehabilitación Deportiva' },
  { name: 'Dra. Laura Martínez', role: 'Psicóloga', specialty: 'Terapia Cognitivo-Conductual' },
  { name: 'Lic. Patricia López', role: 'Enfermera', specialty: 'Atención Pediátrica' },
];
---

<Layout title="Inicio">
  <Header />
  
  <!-- Hero Section - Con imagen de fondo estilo Torre Médica -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900/80 via-slate-800/70 to-cyan-900/60 z-10"></div>
      <img 
        src="https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?auto=format&fit=crop&w=2000&q=80" 
        alt="Clínica médica" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="container mx-auto px-4 py-20 relative z-20">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Logo e título en horizontal -->
        <div class="flex items-center justify-center mb-6 animate-fade-in-delay">
          <!-- Imagen con filter: brightness(0) invert(1) -->
           <img 
            src="/neomed_icon.png" 
            alt="NeoMed Icon" 
            class="w-24 h-auto md:w-32"
          />
          <img 
            src="/neomed_text.png" 
            alt="NeoMed Text" 
            class="w-60 h-20 md:w-80 md:h-55 object-contain -ml-2 md:ml-3" style="filter: brightness(0) invert(1);"
          />
        </div>
        
        <p class="text-xl md:text-2xl text-white/80 max-w-2xl mx-auto mb-12 font-light leading-relaxed animate-fade-in-delay-2">
          Tu mejor opción en salud integral
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-delay-3">
          <a 
            href="#servicios" 
            class="group inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-white px-10 py-4 rounded-full transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-cyan-500/25"
          >
            <span class="font-medium">Ver especialidades</span>
          </a>
          <a 
            href="/agendar" 
            class="inline-flex items-center gap-2 text-white px-10 py-4 rounded-full hover:bg-white/10 transition-all border border-white/30 hover:border-white/50"
          >
            <span class="font-medium">Agendar cita</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce">
      <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white border-b border-slate-100">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-light text-cyan-600 mb-2">10+</div>
          <div class="text-sm text-slate-500 uppercase tracking-wider">Años de experiencia</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-light text-cyan-600 mb-2">15K+</div>
          <div class="text-sm text-slate-500 uppercase tracking-wider">Pacientes atendidos</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-light text-cyan-600 mb-2">4</div>
          <div class="text-sm text-slate-500 uppercase tracking-wider">Especialidades</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-light text-cyan-600 mb-2">98%</div>
          <div class="text-sm text-slate-500 uppercase tracking-wider">Satisfacción</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="servicios" class="py-24 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <p class="text-sm text-cyan-600 font-semibold uppercase tracking-wider mb-4">Especialidades</p>
        <h2 class="font-heading text-4xl md:text-5xl font-light text-slate-900 mb-6">
          Servicios <span class="font-semibold">Médicos</span>
        </h2>
        <p class="text-lg text-slate-500 font-light leading-relaxed">
          Profesionales dedicados a tu bienestar integral
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {services.map((service) => (
          <a 
            href={service.href}
            class="group block p-8 md:p-10 bg-white rounded-2xl hover:shadow-xl transition-all duration-300 border border-slate-100 hover:border-cyan-200"
          >
            <div class="w-14 h-14 rounded-xl bg-cyan-50 flex items-center justify-center mb-6 group-hover:bg-cyan-100 group-hover:scale-110 transition-all duration-300">
              <div set:html={service.icon} class="text-cyan-600" />
            </div>
            <h3 class="font-heading text-xl font-semibold text-slate-900 mb-3 group-hover:text-cyan-600 transition-colors">
              {service.title}
            </h3>
            <p class="text-slate-500 leading-relaxed mb-4 font-light">
              {service.description}
            </p>
            <div class="flex items-center text-cyan-600 font-medium group-hover:translate-x-2 transition-transform">
              <span class="text-sm">Ver más</span>
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="nosotros" class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div>
            <p class="text-sm text-cyan-600 font-semibold uppercase tracking-wider mb-4">Nosotros</p>
            <h2 class="font-heading text-4xl md:text-5xl font-light text-slate-900 mb-6">
              Más que una <span class="font-semibold">clínica</span>
            </h2>
            <p class="text-lg text-slate-600 mb-6 leading-relaxed font-light">
              En NeoMed creemos que la salud es integral. Por eso ofrecemos un enfoque 
              multidisciplinario que cuida tanto tu cuerpo como tu mente.
            </p>
            <p class="text-lg text-slate-600 mb-8 leading-relaxed font-light">
              Nuestro equipo de especialistas trabaja de manera coordinada para brindarte 
              la mejor atención, siempre con calidez y profesionalismo.
            </p>
            <a 
              href="/agendar" 
              class="inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-white px-8 py-3 rounded-full transition-all font-medium shadow-lg hover:shadow-cyan-500/25"
            >
              <span>Agenda tu cita</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
          
          <div class="relative">
            <div class="aspect-square rounded-2xl bg-gradient-to-br from-cyan-100 to-cyan-200 relative overflow-hidden">
              <img 
                src="https://images.unsplash.com/photo-1631217868264-e5b90bb7e133?auto=format&fit=crop&w=800&q=80" 
                alt="Equipo médico" 
                class="w-full h-full object-cover mix-blend-overlay opacity-60"
              />
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="w-48 h-48 text-cyan-500 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="0.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
            </div>
            <div class="absolute -bottom-6 -right-6 bg-white p-6 rounded-xl shadow-xl border border-slate-100">
              <div class="text-3xl font-semibold text-cyan-600 mb-1">2015</div>
              <div class="text-sm text-slate-500">Fundación</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section id="equipo" class="py-24 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <p class="text-sm text-cyan-600 font-semibold uppercase tracking-wider mb-4">Nuestro Equipo</p>
        <h2 class="font-heading text-4xl md:text-5xl font-light text-slate-900 mb-6">
          Profesionales de <span class="font-semibold">Excelencia</span>
        </h2>
        <p class="text-lg text-slate-500 font-light leading-relaxed">
          Conoce a los especialistas que harán de tu experiencia en NeoMed algo excepcional
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
        {team.map((member) => (
          <div class="bg-white rounded-2xl p-8 text-center hover:shadow-xl transition-all duration-300 border border-slate-100 group">
            <div class="w-20 h-20 bg-gradient-to-br from-cyan-100 to-cyan-200 rounded-full mx-auto mb-4 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-10 h-10 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="font-heading text-lg font-semibold text-slate-900 mb-1">{member.name}</h3>
            <p class="text-cyan-600 text-sm font-medium mb-2">{member.role}</p>
            <p class="text-slate-500 text-sm font-light">{member.specialty}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contacto" class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-sm text-cyan-600 font-semibold uppercase tracking-wider mb-4">Contacto</p>
        <h2 class="font-heading text-4xl md:text-5xl font-light text-slate-900 mb-6">
          Estamos aquí <span class="font-semibold text-cyan-600">para ti</span>
        </h2>
        <p class="text-xl text-slate-500 mb-12 font-light">
          Agenda tu cita o contáctanos para más información
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="p-8 rounded-xl bg-slate-50 hover:shadow-lg transition-all border border-slate-100">
            <div class="w-12 h-12 rounded-full bg-cyan-50 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div class="text-sm text-slate-500 mb-1">Teléfono</div>
            <div class="text-lg text-slate-900 font-medium">+506 1234 5678</div>
          </div>
          
          <div class="p-8 rounded-xl bg-slate-50 hover:shadow-lg transition-all border border-slate-100">
            <div class="w-12 h-12 rounded-full bg-cyan-50 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="text-sm text-slate-500 mb-1">Email</div>
            <div class="text-lg text-slate-900 font-medium">info@neomed.cr</div>
          </div>
          
          <div class="p-8 rounded-xl bg-slate-50 hover:shadow-lg transition-all border border-slate-100">
            <div class="w-12 h-12 rounded-full bg-cyan-50 flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div class="text-sm text-slate-500 mb-1">Ubicación</div>
            <div class="text-lg text-slate-900 font-medium">San José, CR</div>
          </div>
        </div>
        
        <a 
          href="/agendar" 
          class="inline-flex items-center gap-2 bg-cyan-500 hover:bg-cyan-400 text-white px-12 py-4 rounded-full transition-all duration-300 hover:scale-105 text-lg font-medium shadow-lg hover:shadow-cyan-500/25"
        >
          <span>Agendar cita ahora</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
  
  .animate-fade-in-delay {
    opacity: 0;
    animation: fade-in 0.8s ease-out 0.2s forwards;
  }
  
  .animate-fade-in-delay-2 {
    opacity: 0;
    animation: fade-in 0.8s ease-out 0.4s forwards;
  }
  
  .animate-fade-in-delay-3 {
    opacity: 0;
    animation: fade-in 0.8s ease-out 0.6s forwards;
  }
</style>
