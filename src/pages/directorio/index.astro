---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';
import { getDirectorio, getCategoriasMedicas } from '../../data/directorio';

const directorio = await getDirectorio();
const categoriasMedicas = await getCategoriasMedicas();
---

<Layout title="Directorio Médico - NeoMed">
  <Header />

  <!-- Hero Search Section -->
  <section class="relative pt-28 pb-16 bg-gradient-to-b from-slate-100 to-slate-50 overflow-hidden">
    <!-- Subtle medical background pattern -->
    <div class="absolute inset-0 opacity-[0.06]">
      <div class="absolute top-20 left-10 w-40 h-40">
        <img src="/neomed_icon.png" alt="" class="w-full h-full object-contain" />
      </div>
      <div class="absolute bottom-10 right-20 w-32 h-32">
        <img src="/neomed_icon.png" alt="" class="w-full h-full object-contain" />
      </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto">
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-8 text-center">
          Agenda tu cita
        </h1>

        <!-- Search Bar -->
        <div class="bg-white rounded-2xl shadow-lg p-5 md:p-6 border border-slate-200/60">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="relative flex-1">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <input 
                id="directorio-search" 
                type="text" 
                placeholder="Médico, especialidad, procedimiento o servicio" 
                class="w-full pl-12 pr-4 py-3.5 rounded-xl border border-slate-200 bg-white focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent text-slate-700 placeholder-slate-400 transition-all"
              />
            </div>
            <select
              id="directorio-select"
              class="px-4 py-3.5 rounded-xl border border-slate-200 bg-white focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent text-slate-600 transition-all cursor-pointer sm:w-52"
            >
              <option value="">Todas las especialidades</option>
              {categoriasMedicas.map((categoria) => {
                return <option value={categoria.slug}>{categoria.name}</option>;
              })}
            </select>
            <button 
              id="directorio-buscar"
              class="inline-flex items-center justify-center gap-2 bg-cyan-600 hover:bg-cyan-700 text-white font-medium px-8 py-3.5 rounded-xl transition-colors shadow-sm hover:shadow-md cursor-pointer"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              Buscar
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Curved bottom edge -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 60" fill="none" class="w-full" preserveAspectRatio="none">
        <path d="M0 60L1440 60L1440 0C1440 0 1080 40 720 40C360 40 0 0 0 0L0 60Z" fill="#f8fafc"/>
      </svg>
    </div>
  </section>

  <!-- Especialidades más buscadas -->
  <section id="especialidades-section" class="py-14 md:py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <h2 class="font-heading text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12">
        Especialidades más buscadas
      </h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6 max-w-5xl mx-auto">
        {categoriasMedicas.map((categoria) => {
          return (
            <button class="especialidad-btn group flex flex-col items-center gap-4 cursor-pointer p-4 rounded-3xl bg-white border-2 border-slate-200 shadow-sm hover:border-cyan-400 hover:shadow-lg transition-all duration-300" data-filter={categoria.slug}>
              {categoria.icon ? (
                <div class="w-20 h-20 md:w-24 md:h-24 rounded-2xl flex items-center justify-center">
                  <img 
                    src={categoria.icon} 
                    alt={categoria.name}
                    class="w-14 h-14 md:w-16 md:h-16 object-contain group-hover:scale-110 transition-transform duration-300"
                  />
                </div>
              ) : (
                <div class="w-20 h-20 md:w-24 md:h-24 rounded-2xl flex items-center justify-center px-3">
                  <span class="especialidad-label text-cyan-700 font-bold text-sm md:text-base text-center leading-tight">
                    {categoria.name}
                  </span>
                </div>
              )}
              {categoria.icon && (
                <span class="especialidad-label text-sm md:text-base text-slate-700 font-semibold group-hover:text-cyan-700 transition-colors text-center leading-tight">{categoria.name}</span>
              )}
            </button>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Directory Results -->
  <section class="py-12 md:py-16 bg-slate-50 min-h-[40vh]">
    <div class="container mx-auto px-4">

      <!-- Results header (hidden until search) -->
      <div id="resultados-header" class="max-w-5xl mx-auto mb-6 hidden">
        <div class="flex items-center justify-between">
          <p class="text-slate-600 text-sm">
            <span id="resultados-count"></span> resultado(s) encontrados
          </p>
          <button id="limpiar-busqueda" class="text-cyan-600 hover:text-cyan-700 text-sm font-medium cursor-pointer flex items-center gap-1 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Limpiar búsqueda
          </button>
        </div>
      </div>

      <!-- Directory Cards (hidden by default) -->
      <div id="directorio-grid" class="max-w-5xl mx-auto space-y-6 hidden">
        {directorio.map((prof, index) => (
          <a 
            href={`/directorio/${prof.slug}`}
            class="directorio-card block bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-lg hover:border-cyan-200 transition-all duration-300 cursor-pointer group"
            data-name={prof.name.toLowerCase()}
            data-specialties={prof.specialties.join(',').toLowerCase()}
            data-procedures={prof.procedures.join(',').toLowerCase()}
            data-role={prof.role.toLowerCase()}
          >
            <!-- Card Header -->
            <div class="flex flex-col md:flex-row items-center md:items-start gap-6 p-6 md:p-8">
              <!-- Photo -->
              <div class="w-28 h-28 md:w-32 md:h-32 rounded-full overflow-hidden ring-4 ring-cyan-50 flex-shrink-0">
                <img 
                  src={prof.image} 
                  alt={prof.name}
                  class="w-full h-full object-cover"
                  style={prof.imagePosition ? `object-position: 50% ${prof.imagePosition};` : ''}
                />
              </div>

              <!-- Basic Info -->
              <div class="flex-1 text-center md:text-left">
                <h3 class="font-heading text-xl font-semibold text-slate-900 group-hover:text-cyan-700 transition-colors">{prof.name}</h3>
                <p class="text-cyan-600 font-medium text-sm mb-1">{prof.banner}</p>
                {prof.code && <p class="text-slate-400 text-xs mb-3">Código de profesional: {prof.code}</p>}
                <div class="flex flex-wrap gap-2 justify-center md:justify-start">
                  {prof.specialties.slice(0, 3).map((spec) => (
                    <span class="inline-block bg-cyan-50 text-cyan-700 text-xs font-medium px-3 py-1 rounded-full">
                      {spec}
                    </span>
                  ))}
                  {prof.specialties.length > 3 && (
                    <span class="inline-block bg-slate-100 text-slate-500 text-xs font-medium px-3 py-1 rounded-full">
                      +{prof.specialties.length - 3} más
                    </span>
                  )}
                </div>
              </div>

              <!-- Arrow indicator -->
              <div class="flex-shrink-0 text-slate-300 group-hover:text-cyan-500 transition-colors">
                <svg class="w-6 h-6 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- No results message -->
      <div id="directorio-no-results" class="hidden text-center py-16 max-w-5xl mx-auto">
        <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <p class="text-slate-500 text-lg">No se encontraron profesionales con ese criterio</p>
        <p class="text-slate-400 text-sm mt-1">Intenta con otro nombre o especialidad</p>
      </div>

      <!-- Initial prompt (shown when no search active) -->
      <div id="directorio-prompt" class="text-center py-16 max-w-5xl mx-auto">
        <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <p class="text-slate-500 text-lg">Busca un profesional por nombre, especialidad o procedimiento</p>
        <p class="text-slate-400 text-sm mt-1">O selecciona una especialidad arriba para ver los profesionales disponibles</p>
      </div>

    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-cyan-600 to-cyan-700">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-heading text-3xl md:text-4xl font-light text-white mb-4">
        ¿Listo para agendar tu <span class="font-semibold">cita</span>?
      </h2>
      <p class="text-cyan-100 text-lg mb-8 max-w-xl mx-auto">
        Nuestros profesionales están listos para atenderte con la mejor calidad y calidez humana
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/agendar" 
          class="inline-flex items-center gap-2 bg-white text-cyan-700 hover:bg-cyan-50 px-8 py-3.5 rounded-full font-medium transition-all shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          Agendar Cita
        </a>
        <a 
          href="https://wa.me/50670494362" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-transparent border-2 border-white/30 text-white hover:bg-white/10 px-8 py-3.5 rounded-full font-medium transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Contactar por WhatsApp
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* No additional styles needed */
</style>

<script>
  // Directorio Médico - Search-first experience
  // Detect if this is a back/forward navigation (e.g. coming back from a profile)
  const navEntries = performance.getEntriesByType('navigation') as PerformanceNavigationTiming[];
  const isBackForward = navEntries.length > 0 && navEntries[0].type === 'back_forward';
  const fromProfile = sessionStorage.getItem('directorio-from-profile') === '1';
  sessionStorage.removeItem('directorio-from-profile');
  const shouldRestore = isBackForward || fromProfile;

  // Only force scroll to top on fresh navigations, not when restoring
  if (!shouldRestore) {
    if ('scrollRestoration' in history) {
      history.scrollRestoration = 'manual';
    }
    window.scrollTo(0, 0);
    // Clear any saved state on fresh navigation (e.g. coming from homepage)
    sessionStorage.removeItem('directorio-state');
  }

  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.directorio-card');
    const searchInput = document.getElementById('directorio-search') as HTMLInputElement;
    const buscarBtn = document.getElementById('directorio-buscar') as HTMLButtonElement;
    const selectFilter = document.getElementById('directorio-select') as HTMLSelectElement;
    const grid = document.getElementById('directorio-grid') as HTMLElement;
    const noResults = document.getElementById('directorio-no-results');
    const prompt = document.getElementById('directorio-prompt');
    const resultadosHeader = document.getElementById('resultados-header');
    const resultadosCount = document.getElementById('resultados-count');
    const limpiarBtn = document.getElementById('limpiar-busqueda');
    const especialidadBtns = document.querySelectorAll('.especialidad-btn');
    const especialidadesSection = document.getElementById('especialidades-section');

    let activeFilter = '';
    let hasSearched = false;

    // Track the last actually-executed search state (not live dropdown value)
    let lastSearchedState = { search: '', filter: '' };

    // Save the last executed search state before navigating to a profile
    function saveState() {
      sessionStorage.setItem('directorio-state', JSON.stringify(lastSearchedState));
    }

    // Intercept clicks on profile cards to save state
    cards.forEach(card => {
      card.addEventListener('click', () => saveState());
    });

    // Strip accents/diacritics and normalize hyphens for search matching
    function normalize(str: string): string {
      return str.normalize('NFD').replace(/[\u0300-\u036f]/g, '').replace(/-/g, ' ').toLowerCase();
    }

    // Show results UI
    function showResults(count: number) {
      hasSearched = true;
      grid?.classList.remove('hidden');
      prompt?.classList.add('hidden');
      resultadosHeader?.classList.remove('hidden');
      if (resultadosCount) resultadosCount.textContent = String(count);
      noResults?.classList.toggle('hidden', count > 0);
      grid?.classList.toggle('hidden', count === 0);
    }

    // Reset to initial state
    function resetSearch() {
      hasSearched = false;
      activeFilter = '';
      if (searchInput) searchInput.value = '';
      if (selectFilter) selectFilter.value = '';
      grid?.classList.add('hidden');
      prompt?.classList.remove('hidden');
      resultadosHeader?.classList.add('hidden');
      noResults?.classList.add('hidden');
      especialidadesSection?.classList.remove('hidden');
      sessionStorage.removeItem('directorio-state');
      // Remove active state from specialty buttons
      especialidadBtns.forEach(btn => {
        const el = btn as HTMLElement;
        el.classList.remove('border-cyan-500', 'bg-cyan-50', 'shadow-lg', 'scale-[1.02]');
        el.classList.add('border-slate-200');
      });
      // Show all cards (reset filter)
      cards.forEach(card => {
        (card as HTMLElement).style.display = '';
      });
    }

    // Perform search
    function doSearch() {
      // Select dropdown takes precedence over specialty button if set
      if (selectFilter?.value) {
        activeFilter = selectFilter.value;
        // Sync specialty button active state
        especialidadBtns.forEach(b => {
          const el = b as HTMLElement;
          const match = el.dataset.filter === activeFilter;
          el.classList.toggle('border-cyan-500', match);
          el.classList.toggle('bg-cyan-50', match);
          el.classList.toggle('shadow-lg', match);
          el.classList.toggle('scale-[1.02]', match);
          el.classList.toggle('border-slate-200', !match);
        });
      }
      const searchTerm = normalize(searchInput?.value.trim() || '');
      const filterTerm = normalize(activeFilter);
      
      if (!searchTerm && !filterTerm) {
        resetSearch();
        return;
      }

      let visibleCount = 0;

      cards.forEach(card => {
        const el = card as HTMLElement;
        const name = normalize(el.dataset.name || '');
        const specialties = normalize(el.dataset.specialties || '');
        const procedures = normalize(el.dataset.procedures || '');
        const role = normalize(el.dataset.role || '');

        const matchesSearch = !searchTerm || 
          name.includes(searchTerm) || 
          specialties.includes(searchTerm) || 
          procedures.includes(searchTerm) ||
          role.includes(searchTerm);

        const matchesFilter = !filterTerm || 
          specialties.includes(filterTerm) || 
          role.includes(filterTerm);

        if (matchesSearch && matchesFilter) {
          el.style.display = '';
          visibleCount++;
        } else {
          el.style.display = 'none';
        }
      });

      showResults(visibleCount);

      // Remember this as the last executed search
      lastSearchedState = { search: searchInput?.value.trim() || '', filter: activeFilter };

      // Smooth scroll to results
      const resultsSection = grid?.closest('section');
      if (resultsSection) {
        const offset = 120;
        const targetPosition = resultsSection.getBoundingClientRect().top + window.pageYOffset - offset;
        window.scrollTo({ top: targetPosition, behavior: 'smooth' });
      }
    }

    // Button click
    buscarBtn?.addEventListener('click', doSearch);

    // Enter key in search input
    searchInput?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        doSearch();
      }
    });

    // Limpiar (clear) button
    limpiarBtn?.addEventListener('click', resetSearch);

    // Specialty buttons
    especialidadBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = (btn as HTMLElement).dataset.filter || '';
        activeFilter = filter;
        if (searchInput) searchInput.value = '';
        // Sync dropdown
        if (selectFilter) selectFilter.value = filter;

        // Active state on button
        especialidadBtns.forEach(b => {
          const el = b as HTMLElement;
          el.classList.remove('border-cyan-500', 'bg-cyan-50', 'shadow-lg', 'scale-[1.02]');
          el.classList.add('border-slate-200');
        });
        const btnEl = btn as HTMLElement;
        btnEl.classList.add('border-cyan-500', 'bg-cyan-50', 'shadow-lg', 'scale-[1.02]');
        btnEl.classList.remove('border-slate-200');

        doSearch();
      });
    });

    // Select dropdown — sync button highlight on change but don't auto-search
    selectFilter?.addEventListener('change', () => {
      activeFilter = selectFilter.value;
      // Sync specialty button active state
      especialidadBtns.forEach(b => {
        const el = b as HTMLElement;
        const match = el.dataset.filter === activeFilter;
        el.classList.toggle('border-cyan-500', match);
        el.classList.toggle('bg-cyan-50', match);
        el.classList.toggle('shadow-lg', match);
        el.classList.toggle('scale-[1.02]', match);
        el.classList.toggle('border-slate-200', !match);
      });
    });

    // Check URL params for auto-search
    const urlParams = new URLSearchParams(window.location.search);
    const searchParam = urlParams.get('buscar');
    if (searchParam && searchInput) {
      searchInput.value = searchParam;
      doSearch();
    }

    // Restore state only when coming back from a profile (back button or "Volver" link)
    if (shouldRestore) {
      const saved = sessionStorage.getItem('directorio-state');
      if (saved) {
        try {
          const state = JSON.parse(saved);
          if (searchInput && state.search) searchInput.value = state.search;
          if (state.filter) {
            activeFilter = state.filter;
            if (selectFilter) selectFilter.value = state.filter;
          }
          if (state.search || state.filter) {
            doSearch();
          }
        } catch (e) {
          // Ignore invalid state
        }
        sessionStorage.removeItem('directorio-state');
      }
    }
  });
</script>
