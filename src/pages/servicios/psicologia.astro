---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

const benefits = [
  'Terapia individual',
  'Terapia de pareja',
  'Manejo de ansiedad',
  'Tratamiento de depresión',
  'Terapia infantil',
  'Orientación vocacional',
  'Manejo del estrés',
  'Crecimiento personal'
];
---

<Layout title="Psicología" description="Servicios de psicología en NeoMed. Apoyo profesional para tu salud mental.">
  <Header />
  
  <!-- Hero con imagen de fondo -->
  <section class="relative pt-32 pb-16 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-b from-slate-900/90 to-slate-800/80 z-10"></div>
      <img 
        src="https://images.unsplash.com/photo-1434030216411-0b793f4b4173?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
        alt="Psicología" 
        class="w-full h-full object-cover object-[center_60%]"
      />
    </div>
    
    <div class="container mx-auto px-4 relative z-20">
      <div class="max-w-4xl">
        <a 
          href="/#servicios" 
          class="inline-flex items-center text-white/70 hover:text-white mb-8 transition-colors group"
        >
          <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Servicios
        </a>
        
        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-2xl backdrop-blur-sm flex items-center justify-center" style="background-color: rgba(6, 112, 116, 0.2);">
            <svg class="w-8 h-8" style="color: rgb(10, 160, 165);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h1 class="font-heading text-4xl md:text-5xl font-light text-white">
            <span class="font-semibold" style="color: rgb(8, 140, 145);">Psicología</span>
          </h1>
        </div>
        
        <p class="text-lg text-white/80 font-light leading-relaxed">
          Apoyo profesional para tu salud mental y emocional. Terapia personalizada 
          para tu bienestar integral.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <p class="text-sm font-semibold uppercase tracking-wider mb-4" style="color: rgb(6, 112, 116);">Lo que ofrecemos</p>
        <h2 class="font-heading text-3xl md:text-4xl font-light text-slate-900 mb-12">
          Servicios de <span class="font-semibold">Psicología</span>
        </h2>
        
        <div class="grid sm:grid-cols-2 gap-4">
          {benefits.map((benefit) => (
            <div class="flex items-start gap-3 bg-white p-6 rounded-xl border border-slate-100 hover:shadow-md transition-shadow">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" style="color: rgb(6, 112, 116);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-slate-700 font-light">{benefit}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-heading text-3xl md:text-4xl font-light text-slate-900 mb-6">
          ¿Listo para cuidar tu <span class="font-semibold" style="color: rgb(6, 112, 116);">bienestar emocional</span>?
        </h2>
        <p class="text-lg text-slate-500 mb-8 font-light">
          Agenda tu consulta psicológica y da el primer paso hacia tu bienestar
        </p>
        <a 
          href="/agendar" 
          class="inline-flex items-center gap-2 text-white px-10 py-4 rounded-full transition-all duration-300 hover:scale-105 text-lg font-medium shadow-lg"
          style="background-color: #067074;"
          onmouseover="this.style.backgroundColor='#088c91'"
          onmouseout="this.style.backgroundColor='#067074'"
        >
          <span>Agendar cita</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
