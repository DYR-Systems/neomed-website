---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

const benefits = [
  'Planes alimenticios personalizados',
  'Evaluación nutricional completa',
  'Control de peso',
  'Nutrición deportiva',
  'Manejo de diabetes',
  'Nutrición infantil',
  'Asesoría en alimentación',
  'Seguimiento nutricional'
];
---

<Layout title="Nutrición" description="Servicios de nutrición en NeoMed. Planes alimenticios personalizados para tu salud.">
  <Header />
  
  <!-- Hero con imagen de fondo -->
  <section class="relative pt-32 pb-16 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-b from-slate-900/90 to-slate-800/80 z-10"></div>
      <img 
        src="https://images.unsplash.com/photo-1490645935967-10de6ba17061?auto=format&fit=crop&w=2000&q=80" 
        alt="Nutrición" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="container mx-auto px-4 relative z-20">
      <div class="max-w-4xl">
        <a 
          href="/#servicios" 
          class="inline-flex items-center text-white/70 hover:text-white mb-8 transition-colors group"
        >
          <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Servicios
        </a>
        
        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-2xl backdrop-blur-sm flex items-center justify-center" style="background-color: rgba(6, 112, 116, 0.2);">
            <svg class="w-8 h-8" style="color: rgb(10, 160, 165);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
            </svg>
          </div>
          <h1 class="font-heading text-4xl md:text-5xl font-light text-white">
            <span class="font-semibold" style="color: rgb(8, 140, 145);">Nutrición</span>
          </h1>
        </div>
        
        <p class="text-lg text-white/80 font-light leading-relaxed">
          Planes alimenticios personalizados diseñados especialmente para alcanzar 
          tus objetivos de salud y bienestar.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-slate-50">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <p class="text-sm font-semibold uppercase tracking-wider mb-4" style="color: rgb(6, 112, 116);">Lo que ofrecemos</p>
        <h2 class="font-heading text-3xl md:text-4xl font-light text-slate-900 mb-12">
          Servicios de <span class="font-semibold">Nutrición</span>
        </h2>
        
        <div class="grid sm:grid-cols-2 gap-4">
          {benefits.map((benefit) => (
            <div class="flex items-start gap-3 bg-white p-6 rounded-xl border border-slate-100 hover:shadow-md transition-shadow">
              <svg class="w-6 h-6 flex-shrink-0 mt-0.5" style="color: rgb(6, 112, 116);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <span class="text-slate-700 font-light">{benefit}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-heading text-3xl md:text-4xl font-light text-slate-900 mb-6">
          ¿Listo para mejorar tu <span class="font-semibold" style="color: rgb(6, 112, 116);">alimentación</span>?
        </h2>
        <p class="text-lg text-slate-500 mb-8 font-light">
          Agenda tu consulta nutricional y comienza tu transformación saludable
        </p>
        <a 
          href="/agendar" 
          class="inline-flex items-centers gap-2 text-white px-10 py-4 rounded-full transition-all duration-300 hover:scale-105 text-lg font-medium shadow-lg" style="background-color: #067074;" onmouseover="this.style.backgroundColor='#088c91'" onmouseout="this.style.backgroundColor='#067074'"
        >
          <span>Agendar cita</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
