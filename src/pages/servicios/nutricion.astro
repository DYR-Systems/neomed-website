---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

const benefits = [
  'Planes alimenticios personalizados',
  'Evaluación nutricional completa',
  'Control de peso',
  'Nutrición deportiva',
  'Manejo de diabetes',
  'Nutrición infantil',
  'Asesoría en alimentación',
  'Seguimiento nutricional'
];
---

<Layout title="Nutrición" description="Servicios de nutrición en NeoMed.">
  <Header />
  
  <!-- Hero -->
  <section class="relative bg-teal-800 text-white py-20 md:py-32">
    <div class="absolute inset-0 bg-gradient-to-br from-teal-800 via-teal-700 to-teal-900 opacity-90"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <a href="/#servicios" class="inline-flex items-center text-white/80 hover:text-white mb-8 transition-colors group">
        <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Volver a Servicios
      </a>
      
      <div class="max-w-4xl">
        <div class="inline-block px-6 py-2 bg-white/20 rounded-full text-sm font-bold uppercase tracking-wider mb-6">
          Especialidad Médica
        </div>
        <h1 class="font-display text-5xl md:text-6xl font-bold mb-6">
          Nutrición
        </h1>
        <p class="text-xl text-white/90 mb-8 leading-relaxed max-w-2xl">
          Planes alimenticios personalizados diseñados especialmente para ti y tus objetivos de salud.
        </p>
        <a href="/agendar" class="inline-flex items-center gap-2 bg-white text-teal-800 px-8 py-4 rounded-md font-bold uppercase tracking-wide shadow-lg hover:shadow-xl transition-all hover:scale-105">
          Agendar Cita
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <div class="inline-block px-6 py-2 bg-teal-100 text-teal-800 rounded-full text-sm font-bold uppercase tracking-wider mb-4">
            Lo que ofrecemos
          </div>
          <h2 class="font-display text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Servicios de <span class="text-teal-700">Nutrición</span>
          </h2>
        </div>
        
        <div class="grid sm:grid-cols-2 gap-6">
          {benefits.map((benefit) => (
            <div class="flex items-start gap-4 bg-gray-50 p-6 rounded-xl border-2 border-gray-200 hover:border-teal-700 hover:shadow-lg transition-all">
              <svg class="w-6 h-6 text-teal-700 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-gray-700 font-medium">{benefit}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-teal-700 to-teal-800 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display text-4xl md:text-5xl font-bold mb-6">
          ¿Listo para mejorar tu alimentación?
        </h2>
        <p class="text-xl mb-8 text-white/90 leading-relaxed">
          Agenda tu consulta nutricional y comienza tu transformación
        </p>
        <a 
          href="/agendar" 
          class="inline-flex items-center gap-2 bg-white text-teal-800 px-12 py-5 rounded-md font-bold uppercase tracking-wide shadow-2xl hover:shadow-white/25 transition-all hover:scale-105 text-lg"
        >
          Agendar Ahora
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
