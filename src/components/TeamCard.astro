---
interface Props {
  name: string;
  role: string;
  specialty: string;
  image?: string;
}

const { name, role, specialty, image } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg overflow-hidden group hover:shadow-xl transition-all duration-300">
  <div class="aspect-square bg-gradient-to-br from-cyan-100 to-cyan-200 relative overflow-hidden">
    {image ? (
      <img src={image} alt={name} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <svg class="w-24 h-24 text-cyan-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
      </div>
    )}
  </div>
  <div class="p-6 text-center">
    <h4 class="font-heading font-semibold text-lg text-slate-900 mb-1">{name}</h4>
    <p class="text-cyan-600 font-medium text-sm mb-1">{role}</p>
    <p class="text-slate-500 text-xs">{specialty}</p>
  </div>
</div>
