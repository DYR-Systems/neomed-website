---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="group block p-8 md:p-10 bg-white rounded-2xl hover:shadow-xl transition-all duration-300 border border-slate-100 hover:border-cyan-200">
  <div class="w-14 h-14 rounded-xl bg-cyan-50 flex items-center justify-center mb-6 group-hover:bg-cyan-100 group-hover:scale-110 transition-all duration-300">
    <div set:html={icon} class="text-cyan-600" />
  </div>
  <h3 class="font-heading text-xl font-semibold text-slate-900 mb-3 group-hover:text-cyan-600 transition-colors">
    {title}
  </h3>
  <p class="text-slate-600 leading-relaxed mb-4">
    {description}
  </p>
  <div class="flex items-center text-cyan-600 font-medium group-hover:translate-x-2 transition-transform">
    <span>Ver m√°s</span>
    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </div>
</a>
