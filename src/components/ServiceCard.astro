---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
  color?: string;
}

const { title, description, icon, href, color = 'primary' } = Astro.props;
---

<a href={href} class="group block bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden">
  <div class="p-6">
    <div class={`w-16 h-16 rounded-xl bg-${color}/10 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform`}>
      <Fragment set:html={icon} />
    </div>
    <h3 class="font-heading font-semibold text-xl text-accent mb-2 group-hover:text-primary transition-colors">
      {title}
    </h3>
    <p class="text-accent/70 text-sm leading-relaxed">
      {description}
    </p>
    <div class="mt-4 flex items-center text-primary font-medium text-sm">
      <span>Conocer m√°s</span>
      <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </div>
  </div>
</a>

<style>
  a {
    background: linear-gradient(to bottom, white, #fafafa);
  }
  a:hover {
    transform: translateY(-4px);
  }
</style>
